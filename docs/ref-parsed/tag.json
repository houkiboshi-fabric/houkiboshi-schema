{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "tag.json",
  "title": "Tag",
  "type": "object",
  "description": "Tag です。",
  "additionalProperties": false,
  "required": [
    "id",
    "label",
    "description"
  ],
  "properties": {
    "id": {
      "examples": [
        "tag-notifications",
        "tag-events",
        "tag-wool"
      ],
      "type": "string",
      "pattern": "^[a-z0-9\\-]+$",
      "description": "id です。\n半角アルファベット小文字, 半角数字, ハイフン(-) のみ使用できます。\nこの文字列は URI の一部として利用できる必要があります。"
    },
    "label": {
      "type": "string",
      "description": "Tag のラベルです。",
      "examples": [
        "Notifications",
        "Events",
        "Wool"
      ]
    },
    "description": {
      "type": "string",
      "description": "Tag の説明です。",
