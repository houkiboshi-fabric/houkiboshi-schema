{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "tags.json",
  "title": "Tags",
  "description": "Tag の定義です。",
  "type": "object",
  "required": [
    "$schema",
    "tags"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "$ref": "index.json#/definitions/$schema"
    },
    "tags": {
      "$ref": "#/definitions/tags"
    },
    "created_at": {
      "$ref": "page.json#/definitions/created_at"
    },
    "modified_at": {
      "$ref": "page.json#/definitions/modified_at"
    }
  },
  "definitions": {
    "tags": {
      "description": "Tag のリストです。",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "description": "Tag です。",
        "additionalProperties": false,
        "required": [
          "id",
          "label",
          "description"
        ],
        "properties": {
          "id": {
            "$ref": "index.json#/definitions/id",
            "examples": [
              "tag-notifications",
              "tag-events",
              "tag-wool"
            ]
          },
          "label": {
            "type": "string",
            "description": "Tag のラベルです。",
            "examples": [
              "Notifications",
              "Events",
              "Wool"
            ]
          },
          "description": {
            "type": "string",
            "description": "Tag の説明です。",
            "examples": [
              "お知らせです。",
              "イベントへの出展やイベント終了後の感想などを書きます。",
              "毛を使った製作について書きます。"
            ]
          }
        }
      }
    }
  }
}